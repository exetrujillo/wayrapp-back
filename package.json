{
  "name": "wayrapp-back",
  "version": "1.0.0",
  "description": "Backend para la aplicación de lenguas Wayrapp - Agnóstico a la base de datos",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:shell": "docker-compose run --rm app sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exetrujillo/wayrapp-back.git"
  },
  "keywords": [],
  "author": "Exequiel Trujillo Escobar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exetrujillo/wayrapp-back/issues"
  },
  "homepage": "https://github.com/exetrujillo/wayrapp-back#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.9"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "cross-env NODE_OPTIONS=--experimental-vm-modules jest --findRelatedTests --bail"
    ]
  }
}